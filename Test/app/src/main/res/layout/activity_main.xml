<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:background="FF5722">



    //header
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:background="FF9800">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            tools:background="FF9800">

            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnGet"
                android:layout_alignLeft="@+id/btnGet"
                android:layout_marginTop="20dp"
                android:text="24 Hour Time Selected"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview"
                android:layout_alignLeft="@+id/textview"
                android:layout_marginTop="20dp"
                android:text="12 Hour Time Selected"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>


        //time layout
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF9800">>


            <TextView
                android:id="@+id/sydney"
                android:layout_width="140dp"
                android:layout_height="25dp"
                android:text="Time in Sydney"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.29" />

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sydney" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="142dp"
                android:layout_height="85dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/dsa"
                tools:ignore="VectorDrawableCompat"
                tools:layout_editor_absoluteY="1dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF9800">>



            <TextView
                android:id="@+id/NY"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Time in New York"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.29" />

            <TextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NY" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="142dp"
                android:layout_height="85dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/nypic"
                tools:ignore="VectorDrawableCompat"
                tools:layout_editor_absoluteY="1dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF9800">>



            <TextView
                android:id="@+id/berlin"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Time in Berlin"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.29" />

            <TextView
                android:id="@+id/textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/berlin" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="142dp"
                android:layout_height="85dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/berlinpic"
                tools:ignore="VectorDrawableCompat"
                tools:layout_editor_absoluteY="1dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF9800">>



            <TextView
                android:id="@+id/seoul"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Time in Seoul"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.29" />

            <TextView
                android:id="@+id/textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seoul" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="142dp"
                android:layout_height="85dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/seoulpic"
                tools:ignore="VectorDrawableCompat"
                tools:layout_editor_absoluteY="1dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF9800">>



            <TextView
                android:id="@+id/SF"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Time in San Francisco"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.29" />

            <TextView
                android:id="@+id/textview5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SF" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="142dp"
                android:layout_height="85dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/sfpic"
                tools:ignore="VectorDrawableCompat"
                tools:layout_editor_absoluteY="1dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>




        //time shift
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="bottom">


            <Button
                android:id="@+id/button1"
                android:layout_width="205dp"
                android:layout_height="50dp"
                android:text="12 Hour" />

            <Button
                android:id="@+id/button2"
                android:layout_width="205dp"
                android:layout_height="50dp"
                android:text="24 Hour" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>